{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {"include": "./email/templates/**/*", "outDir": "./dist/src"}, {"include": "../config/yaml/*.yaml", "outDir": "./dist/config"}
    ], 
    "watchAssets": true
  }
}
